{
  "manifest_version": 2,

  "name": "MAL Anime Add Helper",
  "description": "This extension helps you add anime to your MAL list easier.",
  "version": "1.0",

  "options_page": "options.html", 

  "background": {
    "scripts": ["popup.js"]
  },

  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "http://*.myanimelist.net/*"
  ]
}
